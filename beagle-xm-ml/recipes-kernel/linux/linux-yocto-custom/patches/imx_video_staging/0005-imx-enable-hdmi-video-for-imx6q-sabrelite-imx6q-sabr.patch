From: Robert Nelson <robertcnelson@gmail.com>
Date: Sun, 4 Aug 2013 16:22:50 -0500
Subject: [PATCH 5/5] imx: enable hdmi video for imx6q-sabrelite &
 imx6q-sabresd

Signed-off-by: Robert Nelson <robertcnelson@gmail.com>
---
 arch/arm/boot/dts/imx6q-sabrelite.dts | 12 ++++++++++++
 arch/arm/boot/dts/imx6q-sabresd.dts   | 12 ++++++++++++
 2 files changed, 24 insertions(+)

diff --git a/arch/arm/boot/dts/imx6q-sabrelite.dts b/arch/arm/boot/dts/imx6q-sabrelite.dts
index e437606..160bad7 100644
--- a/arch/arm/boot/dts/imx6q-sabrelite.dts
+++ b/arch/arm/boot/dts/imx6q-sabrelite.dts
@@ -93,6 +93,11 @@
 	status = "okay";
 };
 
+&hdmi {
+	ddc = <&i2c2>;
+	status = "okay";
+};
+
 &i2c1 {
 	status = "okay";
 	clock-frequency = <100000>;
@@ -108,6 +113,13 @@
 	};
 };
 
+&i2c2 {
+	clock-frequency = <100000>;
+	pinctrl-names = "default";
+	pinctrl-0 = <&pinctrl_i2c2_1>;
+	status = "okay";
+};
+
 &iomuxc {
 	pinctrl-names = "default";
 	pinctrl-0 = <&pinctrl_hog>;
diff --git a/arch/arm/boot/dts/imx6q-sabresd.dts b/arch/arm/boot/dts/imx6q-sabresd.dts
index 9cbdfe7..ed724ab 100644
--- a/arch/arm/boot/dts/imx6q-sabresd.dts
+++ b/arch/arm/boot/dts/imx6q-sabresd.dts
@@ -23,3 +23,15 @@
 &sata {
 	status = "okay";
 };
+
+&i2c2 {
+	clock-frequency = <100000>;
+	pinctrl-names = "default";
+	pinctrl-0 = <&pinctrl_i2c2_1>;
+	status = "okay";
+};
+
+&hdmi {
+	ddc = <&i2c2>;
+	status = "okay";
+};
\ No newline at end of file
