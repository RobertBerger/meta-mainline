+++ b/arch/arm/boot/dts/am335x-bone.dts
@@ -42,3 +42,6 @@
 /* #include "am335x-bone-ttyO2.dtsi" */
 /* #include "am335x-bone-ttyO4.dtsi" */
 /* #include "am335x-bone-ttyO5.dtsi" */
+
